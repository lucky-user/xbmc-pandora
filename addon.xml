<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.xbmc.pandora"
       name="Pandora"
       version="2.1.2"
       provider-name="spbogie">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Pandora Radio</summary>
    <description lang="en">Pandora Internet Radio for XBMC.</description>
    <platform>all</platform>
  </extension>
  <!-- repository for auto-updates -->
  <extension point="xbmc.addon.repository" name="RIVY XBMC Addon Repository">
    <info compressed="false">https://raw.github.com/rivy/repo.xbmc.addons/master/addons.xml</info>
    <checksum>https://raw.github.com/rivy/repo.xbmc.addons/master/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.github.com/rivy/repo.xbmc.addons/master/</datadir>
  </extension>
</addon>
